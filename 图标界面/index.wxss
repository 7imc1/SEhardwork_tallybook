.container {
  padding: 10px;
}

.header {
  display: flex;
  align-items: center;
  padding: 10px;
}

.back-btn {
  font-size: 20px;
  cursor: pointer;
}

.title {
  margin-left: 10px;
  font-weight: bold;
  font-size: 18px;
}

.summary {
  margin-top: 10px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.month-title {
  font-size: 16px;
  font-weight: bold;
}

.summary-details {
  display: flex;
  flex-direction: column;
  margin-top: 5px;
}

.tabs {
  display: flex;
  margin-top: 10px;
}

.tab-button {
  flex: 1;
  padding: 10px;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.active {
  background-color: #007aff;
  color: #fff;
}

.chart {
  margin-top: 10px;
}

.month-label {
  font-size: 14px;
  font-weight: bold;
}

.amount-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}

.bar-container {
  display: flex;
  align-items: flex-end;
  height: 100px;
  border-bottom: 1px solid #ddd;
  margin-top: 10px;
}

.bar {
  width: 8px;
  background-color: #007aff;
  margin-right: 2px;
  border-radius: 3px;
  cursor: pointer;
}
