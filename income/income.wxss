/* pages/inputBill/inputBill.wxss */
.container {
  padding: 20rpx;
}

.tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.tab {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  padding: 10rpx 0;
}
.active {
  color: #007aff;
  border-bottom: 2px solid #007aff;
}

.category {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 20rpx 0;
}
.category-item {
  text-align: center;
  font-size: 28rpx;
  padding: 10rpx;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}
.selected {
  color: #007aff;
}

.amount {
  display: flex;
  align-items: center;
  font-size: 48rpx;
  padding: 20rpx 0;
}
.label {
  font-size: 60rpx;
  margin-right: 10rpx;
}
.amount-value {
  font-size: 48rpx;
}

.note {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.date {
  color: #999;
}

.keyboard {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  padding: 20rpx 0;
}
.key {
  text-align: center;
  font-size: 36rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}
.key:active {
  background-color: #d9d9d9;
}
